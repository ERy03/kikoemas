<div class="title col-xs-8 col-sm-9 col-lg-9 mx-auto my-2" style='display: block'>
  <h3>Past Sessions:</h3>
</div>
<div class="past_container row">
  <% @past_student_session.each do |pair| %>
    <div class="col-xs-2 col-sm-3 col-lg-3 text-center">
      <%= cl_image_tag(pair[0].photo.key, height: 80, width: 80, radius: 'max', background: '#f4f4f4') %>
      <p><%= pair[0].last_name %> <%= pair[0].first_name %></p>
      <div class='recent_session'>
        <p>Recent session</p>
        <% date = pair[1].start_time %>
        <p>Date: <%= date.year %>/<%= date.month %>/<%= date.day %> <%= date.hour %>:<%= date.min == 0 ? '00' : date.min %></p>
        <p>Mode: <%= pair[1].mode %></p>
        <p>Note: <%= pair[1].note %></p>
      </div>
    </div>
  <% end %>
</div>
