<div class="container pt-5 login-color">
  <div class="row justify-content-center">
    <div class="col col-sm-10 col-md-8 col-lg-6">
      <h2 class= "text-center title-color">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs inputs-label">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label_html: { class: "m-0"} %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label_html: { class: "m-0"}  %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions d-flex justify-content-center " style= "border-radius: 5px">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
