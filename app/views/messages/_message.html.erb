<% if message.sender == current_counselor || message.sender == current_user %>
  <div class="message-container" id="message-<%= message.id %>">
    <div class="chat-message">
      <p><%= message.content %></p>
    </div>
    <small><%= message.created_at.strftime("%l:%M%p") %></small>
  </div>
<% else %>
  <div class="message-container-receive" id="message-<%= message.id %>">
    <div class="d-flex">
      <% if message.sender == @counselor  %>
        <%= cl_image_tag(@booking.counselor.photo.key, height: 40, width: 40, radius: 'max', background: '#f9fafd') %>
      <% else %>
        <%= cl_image_tag(@booking.user.photo.key, height: 40, width: 40, radius: 'max', background: '#f9fafd') %>
      <% end %>
      <div class="chat-message-receive ml-2">
        <p><%= message.content %></p>
      </div>
    </div>
    <small><%= message.created_at.strftime("%l:%M%p") %></small>
  </div>
<% end %>
